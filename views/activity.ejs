                        //         txt.value = null;
                        //         txt.focus();
                        //     },
                        // });

                        $.ajax({
                            url: "/activity/check",
                            type: 'POST',
                            data: {
                                btn_txt: $(this).text(),
                            },
                            dataType: 'json',
                            success: function (data) {
                                txt.value = null;
                                txt.focus();
                            },
                            error: function (xhr, status) {
                                txt.value = null;
                                txt.focus();
                            },
                        });
                    }
                }).appendTo("#btn_list");
            }

            input.addEventListener("keypress", function(event) {
                e = event || window.event;

                var keyCode = e.keyCode || e.which;

                if (event.key === "Enter") {
                    event.preventDefault();
                    
                    send();
                }
            });

            
        });
