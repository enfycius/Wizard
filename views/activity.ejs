    <script>
        var btn_types = ["btn-outline-success", "btn-outline-warning", "btn-outline-primary", "btn-outline-danger", "btn-outline-info"];

        async function revisedRandId() {
            return Math.random().toString(36).replace(/[^a-z]+/g, '').substr(2, 10);
        }

        async function send() {
            const btn_txt = txt.value;
            const btn_id = await revisedRandId();

            $.ajax({
                url: "/activity/save",
                type: 'POST',
                data: {
                    btn_id: btn_id,
                    btn_txt: btn_txt,
                },
                dataType: 'json',
                success: function (data) {
                    txt.value = null;
                    txt.focus();
                },
                error: function (xhr, status) {
                    txt.value = null;
                    txt.focus();
                },
                complete: function () {
                    const start = 0;
                    const end = 4;
                    var random_n = Math.floor((Math.random() * (end-start+1)) + start);

                    $('<button/>', {
                        text: btn_txt,
                        id: btn_id,
                        class: 'btn' + ' ' + btn_types[random_n] + ' ' + 'btn-rounded',
                        value: btn_txt,
                        click: function () { 
                            // $(this).remove(); 
                            
                            // $.ajax({
                            //     url: "/activity/delete",
                            //     type: 'POST',
                            //     data: {
                            //         btn_id: $(this).attr("id"),
                            //         btn_txt: $(this).text(),
                            //     },
                            //     dataType: 'json',
                            //     success: function (data) {
                            //         txt.value = null;
                            //         txt.focus();
                            //     },
                            //     error: function (xhr, status) {
                            //         txt.value = null;
                            //         txt.focus();
                            //     },
                            // });

                            $.ajax({
                            url: "/activity/check",
                            type: 'POST',
                            data: {
                                btn_txt: $(this).text(),
                            },
                            dataType: 'json',
                            success: function (data) {
                                txt.value = null;
                                txt.focus();
                            },
                            error: function (xhr, status) {
                                txt.value = null;
                                txt.focus();
                            },
                        });

                        }
                    }).appendTo("#btn_list");
                }
            });
        };

        async function del() {
            const btn_txt = txt.value;
            const btn_object = document.querySelector("button[value=" + btn_txt + "]");
            const btn_id = btn_object.getAttribute('id');

            $.ajax({
                url: "/activity/delete",
                type: 'POST',
                data: {
                    btn_id: btn_id,
                    btn_txt: btn_txt
                },
                dataType: 'json',
                success: function (data) {
                    txt.value = null;
                    txt.focus();
                },
                error: function (xhr, status) {
                    txt.value = null;
                    txt.focus();
                },
                complete: function () {
                    btn_object.remove();
                }
            });
        };

        $(document).ready(function() {
            const start = 0;
            const end = 4;

            var activities = <%- activities %>;
            
            input = document.getElementById("register");
            txt = document.getElementById("btn_txt");

            for(i = 0; i <= activities.length; i++) {
                var random_n = Math.floor((Math.random() * (end-start+1)) + start);

                $('<button/>', {
                    text: activities[i].activity,
                    id: activities[i].id,
                    class: 'btn' + ' ' + btn_types[random_n] + ' ' + 'btn-rounded',
                    value: activities[i].activity,
                    click: function () { 
                        // $(this).remove();

                        // $.ajax({
