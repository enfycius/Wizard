        function send() {
            const word = input.value;

            $.ajax({
                url: "/create",
                type: 'POST',
                data: {
                    word: word,
                },
                dataType: 'json',
                success: function (data) {
                    input.value = null;
                    input.focus();
                },
                error: function (xhr, status) {
                    input.value = null;
                    input.focus();
                }
            });
        };
