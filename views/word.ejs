<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel='stylesheet' href='/stylesheets/word.css' />
    <title>Word</title>

    <script>
        setTimeout(function(){
            location.reload();
        },10000);
    </script>
</head>
<body>
    <h1><span class="blue">&lt;</span>Word<span class="blue">&gt;</span> <span class="yellow">Dictionary</pan></h1>
        
        <div class="table_container">
            <table class="container">
                <thead>
                    <tr>
                        <th class="word"><h1>Word</h1></th>
                        <th class="kr"><h1>KR</h1></th>
                        <th class="en"><h1>EN</h1></th>
                        <th class="ex"><h1>EX</h1></th>
                    </tr>
                </thead>
                <tbody>
                    <% for (var i=0; i<pages.length; i++) { %>
                    <tr>
                        <td class="word"><%= pages[i].word %></td>
                        <td class="kr"><%= pages[i].kr %></td>
                        <td class="en"><%- pages[i].en.replace(/\n/g, '<br>') %></td>
                        <td class="ex"><%- pages[i].ex.replace(/\n/g, '<br>') %></td>
                    </tr>
                <% } %>
                </tbody>
            </table>
        </div>
</body>
</html>